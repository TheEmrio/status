{
  "compilerOptions": {
    "incremental": false,
    "target": "es5",
    "allowJs": false,
    "outDir": "./build",
    "removeComments": true,
    "strict": true,
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true
  },
  "include": [
    "./src/**/*"
  ]
}
